<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.ztzhome.zblog.mapper.SingerMapper">

    <insert id="insertSinger" parameterType="xyz.ztzhome.zblog.entity.Bean.Singer" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_singer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="singerName != null">singer_name,</if>
            <if test="gender != null">gender,</if>
            <if test="avatar != null">avatar,</if>
            <if test="birth != null">birth,</if>
            <if test="area != null">area,</if>
            <if test="introduction != null">introduction,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="singerName != null">#{singerName},</if>
            <if test="gender != null">#{gender},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="birth != null">#{birth},</if>
            <if test="area != null">#{area},</if>
            <if test="introduction != null">#{introduction},</if>
        </trim>
    </insert>
    <select id="getSinger" resultType="xyz.ztzhome.zblog.entity.Bean.Singer">
        select * from tb_singer where id=#{id}
    </select>
    <select id="selectBySingerName" resultType="xyz.ztzhome.zblog.entity.Bean.Singer">
        select * from tb_singer where singer_name=#{singerName}
    </select>
</mapper>